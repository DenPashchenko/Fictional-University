@model IEnumerable<FictionalUniversityWebApp.Models.Group>

@{
	ViewData["Title"] = "Groups";
}

<h3>Groups</h3>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Course)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Course.Name)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.GroupId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.GroupId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.GroupId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<p>
	@Html.ActionLink("Back to course list", "Index", "Course")
</p>
