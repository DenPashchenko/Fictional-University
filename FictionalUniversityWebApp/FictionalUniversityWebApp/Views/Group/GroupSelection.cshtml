@model IEnumerable<FictionalUniversityWebApp.Models.Group>

@{
	ViewData["Title"] = "Groups in the course";
}

<h3>The course @Html.DisplayFor(model => model.FirstOrDefault().Course.Name) includes such group(s):</h3>
<br />

<table class="table table-striped table-hover">
	<thead>
		<tr class="bg-primary text-light">
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a asp-controller="Student" asp-action="StudentSelection" asp-route-id="@item.GroupId"
					data-bs-toggle="tooltip" data-bs-title="The list of students in @item.Name group">@item.Name</a>
				</td>
				<td>
					<a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.GroupId"><i class="bi bi-pencil me-1"></i>Edit</a> |
					<a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.GroupId"><i class="bi bi-zoom-in me-1"></i>Details</a> |
					<a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.GroupId"><i class="bi bi-trash me-1"></i>Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<p>
	<a href="javascript:history.back()">Back to previous page</a>
</p>
